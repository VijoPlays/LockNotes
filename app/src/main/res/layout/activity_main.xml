<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:forceDarkAllowed="true"
        tools:context=".MainActivity">

    <Button
            android:text="@string/open_onenote"
            android:layout_width="105dp"
            android:layout_height="56dp" android:id="@+id/button_onenote"
            android:onClick="openOneNote"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="50dp" app:layout_constraintEnd_toStartOf="@+id/floatingActionButton2"
            android:layout_marginEnd="169dp" android:layout_marginBottom="119dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="560dp" app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="@string/set_reminder"
            android:layout_width="99dp"
            android:layout_height="58dp" android:id="@+id/button_reminder"
            android:onClick="newReminder"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="52dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="288dp"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" app:srcCompat="@drawable/ic_locknotes_add"
            android:id="@+id/floatingActionButton2"
            android:backgroundTint="#FFFFFF"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="556dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="31dp"
            android:layout_marginBottom="119dp" app:layout_constraintBottom_toBottomOf="parent"
            android:onClick="newNote" android:focusable="true"/>
    <EditText
            android:layout_width="277dp"
            android:layout_height="327dp"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            android:id="@+id/reminderText"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="27dp"
            android:autofillHints=""
            android:layout_marginBottom="26dp"
            app:layout_constraintBottom_toTopOf="@+id/floatingActionButton2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp" android:shadowColor="#0C0707" app:layout_constraintHorizontal_bias="0.481"
            android:layout_marginTop="42dp" app:layout_constraintTop_toBottomOf="@+id/button_reminder"
            android:visibility="visible"/>
    <Switch
            android:text="@string/auto_remind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/switch_autoReminder"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="59dp" app:layout_constraintEnd_toStartOf="@+id/button_reminder"
            android:layout_marginEnd="94dp" android:layout_marginBottom="76dp"
            app:layout_constraintBottom_toTopOf="@+id/reminderText" android:onClick="changeAutoRemind"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="64dp"
            app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>