<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:forceDarkAllowed="true"
        tools:context=".MainActivity">

    <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"/>

    <Switch
            android:text="@string/auto_remind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switch_autoReminder"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="52dp"
            android:layout_marginBottom="76dp"
            app:layout_constraintBottom_toTopOf="@+id/reminderText"
            android:onClick="changeAutoRemind"
            android:layout_marginTop="64dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.239"
            app:layout_constraintEnd_toStartOf="@+id/button_reminder" android:layout_marginEnd="66dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="@string/set_reminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_reminder"
            android:onClick="newReminder"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="52dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="288dp" app:layout_constraintHorizontal_bias="0.568"
            android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/toolbar"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            android:id="@+id/reminderText"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="27dp"
            android:autofillHints=""
            android:layout_marginBottom="26dp"
            app:layout_constraintBottom_toTopOf="@+id/floatingActionButton2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"
            android:shadowColor="#0C0707"
            app:layout_constraintHorizontal_bias="0.481"
            android:layout_marginTop="42dp"
            app:layout_constraintTop_toBottomOf="@+id/button_reminder"
            android:visibility="visible"/>
    <Button
            android:text="@string/open_onenote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_onenote"
            android:onClick="openOneNote"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="50dp"
            app:layout_constraintEnd_toStartOf="@+id/floatingActionButton2"
            android:layout_marginEnd="169dp"
            android:layout_marginBottom="119dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="560dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:srcCompat="@drawable/ic_locknotes_add"
            android:id="@+id/floatingActionButton2"
            android:backgroundTint="#FFFFFF"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="556dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="31dp"
            android:layout_marginBottom="119dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:onClick="newNote"
            android:focusable="true"/>

</androidx.constraintlayout.widget.ConstraintLayout>